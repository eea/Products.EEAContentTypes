<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body tal:define="Iterator python:modules['Products.CMFPlone'].IndexIterator;
                  tabindex python:Iterator(mainSlot=False)">
<div metal:define-macro="portlet"
     tal:omit-tag=""
     tal:condition="python:language != 'en'">

<dl class="portlet gradientBG" id="portlet-translationfeedback">
    <dt i18n:translate="title_feedback_translations">Comments on translations</dt>
    <dd class="portletItem"
        i18n:translate="help_feedback_translations">Please help us increase the quality of the translations.</dd>
    <dd class="portletItem">
        <form style="margin-bottom:5px;" action="send_feedback_site"
              name="translationfeedback" id="translationfeedback"
              method="post">
	          <input type="text" name="myurl" id="url" value="Enter this page's url" alt="This page's url" />
	          <input type="hidden" name="subject" value="Translation comment" alt="Subject" 
		         tal:attributes="value string:Translation comment for ${language}"/>
	          <label for="sender_from_address" class="hiddenStructure" i18n:translate="label_sender_from_address">Sender_From_Address</label>
                  <input type="text" 
                     name="sender_from_address" 
                     id="sender_from_address"  
                     alt="Email address"
                     value="Enter email"  
                     size="20" 
                     tal:attributes="tabindex tabindex/next" 
                     i18n:attributes="alt label_email;
				      value label_email;" />
	          <label for="message" class="hiddenStructure" i18n:translate="label_message">Message</label>
              <textarea 
                     name="message" 
                     id="message"  
                     alt="Message address"
                     value="Enter message"  
                     rows="8"
                     tal:attributes="tabindex tabindex/next" 
                     i18n:attributes="alt label_message;"
		     i18n:translate="label_message">Your message</textarea>
		       <input type="submit" 
		               class="standalone"
                       name="submit"
                       value="Send"
                       alt="Send"
                       tal:attributes="tabindex tabindex/next;"
                       i18n:attributes="value label_send; alt label_send;" />
        </form>
    </dd>  
    <dd class="portletFooter"></dd>
</dl>

</div>
</body>
</html>
