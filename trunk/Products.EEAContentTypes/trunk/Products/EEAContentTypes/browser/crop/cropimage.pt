<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
</head>
<body>
<metal:main fill-slot="main">

<form id="cropImage" action="" method="post"
      tal:define="field python: view.field();
                  aspectratio python: view.aspectRatio()">
    <img src="" id="croppableImage"
      tal:attributes="src string:${context/absolute_url}/image_large;
        data-field field/name;
        data-aspectratio python: aspectratio;
        data-previewratiox python: view.scaleToLargeRatios()[0];
        data-previewratioy python: view.scaleToLargeRatios()[1]"/>
    <div id="formControls">

        <ul>
            <li>Image Size: <span tal:content="field/image">content size</span></li>
            <li>Crop Size: <span id="crop_size"></span></li>
        </ul>
        <h3>Resize cropped image to these predefined standards:</h3>
      <select tal:define="items view/imageSizes" id="imagesize-selector">
            <option value="">Select image resolution</option>
            <tal:items tal:repeat="item items">
                <option  
                        tal:attributes="value item;"
                        tal:content="item" />
            </tal:items>
    </select>
      <input disabled="disabled" class="standalone" id="image-recrop" type="submit" value="Crop" name="recrop" i18n:attributes="value"/>
    </div>
    <div class="visualClear" />
  </form>

</metal:main>
</body>
</html>
