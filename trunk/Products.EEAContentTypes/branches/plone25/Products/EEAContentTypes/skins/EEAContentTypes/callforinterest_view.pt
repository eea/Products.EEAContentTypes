<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
   
<body>

<div metal:fill-slot="main">
    <metal:header define-macro="header">
        <h1 tal:content="here/Title"></h1>
	<p id="cftId" class="documentDescription" tal:content="here/getCallForId"></p>
    </metal:header>
    <metal:body define-macro="body">
           <tal:block define="text python:here.CookedBody(stx_level=2);
                                   len_text python:len(text.strip());">
	       <div class="documentDescription"
                    tal:condition="here/Description">
                    <tal:description tal:content="here/Description" >
                       News summary</tal:description>
               </div>

               <div class="stx"
                    tal:condition="len_text"
                    tal:omit-tag="python:here.text_format != 'structured-text'">
                   <div tal:replace="structure text" />
                </div>
          </tal:block>
    </metal:body>

</div>


</body>
</html>

